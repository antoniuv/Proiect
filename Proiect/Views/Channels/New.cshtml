@model Proiect.Models.Channel


<h2 class="text-center mt-5">Creare Canal</h2>
<br />
<div class="container mt-5">
    <div class="row">
        <div class="col-6 offset-3">

            @using (Html.BeginForm(actionName: "New", controllerName: "Channels",
            method: FormMethod.Post))
            {

                @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                @Html.Label("Name", "Nume Canal")
                <br />
                @Html.TextBox("Name", null, new { @class = "form-control" })

                @Html.ValidationMessageFor(c => c.Name, "", new { @class = "text-danger" })
                <br />

                <br />

                @Html.Label("Description", "Descriere Canal")
                <br />
                @Html.TextArea("Description", null, new { @class = "form-control" })

                @Html.ValidationMessage("Description", null, new { @class = "text-danger" })
                <br />

                <br />

                <label>Selectati categoria</label>
                @Html.DropDownListFor(c => c.CategoryId, new SelectList(Model.Categ, "Value", "Text"),
                         "Selectati categoria", new { @class = "form-control" })

                @Html.ValidationMessageFor(c => c.CategoryId, null, new { @class = "text-danger" })
                <br />

                <br />

                <button class="btn btn-success" type="submit">Infaptuieste Canal</button>

            }

        </div>
    </div>
</div>