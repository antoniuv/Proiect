@{
    ViewBag.Title = "Index";
}
<br />

<h2 class="text-center">Canalele Tale</h2>

<br />

@if (TempData["message"] != null)
{
    <div class="alert @ViewBag.Alert p-3 rounded-3 text-center mb-5">
        @ViewBag.Message
    </div>
}

<br />

@foreach (Proiect.Models.Channel channel in ViewBag.Channels)
{

    <div class="card">

        <div class="card-body">

            <h3 class="card-title alert-success py-3 px-3 rounded-2">@channel.Name</h3>

            <div class="card-text">@channel.Description</div>

            <div class="d-flex justify-content-between flex-row mt-5">

                <div><i class="bi bi-globe"></i> @channel.Category.CategoryName</div>

                <a class="btn btn-success" href="/Channels/Show/@channel.Id">Access Channel</a>

                <span class="alert-success">@channel.Date</span>

            </div>

        </div>


    </div>

    <br />
    <br />
}